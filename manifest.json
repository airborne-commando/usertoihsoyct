{
  "manifest_version": 2,
  "name": "usertoihsoyct",
  "version": "1.0.3",
  "description": "Redirects to ihsoyct.github.io when clicking Reddit usernames to search their posts and comments",
  "author": "airborne-commando",
  "homepage_url": "https://github.com/airborne-commando/usertoihsoyct",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://old.reddit.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  
"browser_specific_settings": {
  "gecko": {
    "id": "{57a1907c-13f3-4882-91d5-d7ee243f3801}",
    "strict_min_version": "91.0",
    "data_collection_permissions": {
      "required": ["none"],
      "optional": []
    },
    "developer": {
      "name": "Nicholas Thompson",
      "url": "https://github.com/airborne-commando"
    }
  }
}
}